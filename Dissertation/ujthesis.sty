\ProvidesPackage{ujthesis}

\usepackage{ifthen}

%commands
\newcommand{\tName}{TITLE}
\newcommand{\sName}{STUDENT NAME}
\newcommand{\degName}{DISSERTATION}
\newcommand{\dName}{DEGREE}
\newcommand{\fName}{FIELD}
\newcommand{\facName}{FACULTY NAME}
\newcommand{\uName}{UNIVERSITY OF JOHANNESBURG}
\newcommand{\pName}{SUPERVISOR}
\newcommand{\copName}{CO-SUPERVISOR}
\newcommand{\supName}{SUPERVISOR NAME}
\newcommand{\cosupName}{}
\newcommand{\sDate}{SUBMISSION DATE}
\newcommand{\dFont}{}

\newboolean{dissertation}
\newboolean{thesis}

\setboolean{dissertation}{true}
\setboolean{thesis}{false}

%renew commands for setting it
\newcommand{\approvedtitle}[1]
	{
		\renewcommand{\tName}{\uppercase{#1}}
	}

\newcommand{\student}[1]
	{
		\renewcommand{\sName}{\uppercase{#1}}
	}

\newcommand{\degree}[1]
	{
		\renewcommand{\dName}{\uppercase{#1}}
	}

\newcommand{\field}[1]
	{
		\renewcommand{\fName}{\uppercase{#1}}
	}

\newcommand{\faculty}[1]
	{
		\renewcommand{\facName}{\uppercase{#1}}
	}

\newcommand{\university}[1]
	{
		\renewcommand{\uName}{\uppercase{#1}}
	}

\newcommand{\supervisorName}[1]
	{
		\renewcommand{\supName}{\uppercase{#1}}
	}

\newcommand{\cosupervisorName}[1]
	{
		\renewcommand{\cosupName}{\uppercase{#1}}
	}

\newcommand{\submissionDate}[1]
	{
		\renewcommand{\sDate}{\uppercase{#1}}
	}

\newcommand{\coverFont}[1]
	{
		\renewcommand{\dFont}{#1}
	}

\newcommand{\dissertation}
	{
		\setboolean{dissertation}{true}
		\setboolean{thesis}{false}
		\renewcommand{\degName}{DISSERTATION}
		\renewcommand{\pName}{SUPERVISOR}
		\renewcommand{\copName}{CO-SUPERVISOR}
	}

\newcommand{\thesis}
	{
		\setboolean{thesis}{true}
		\setboolean{dissertation}{false}
		\renewcommand{\degName}{THESIS}
		\renewcommand{\pName}{PROMOTER}
		\renewcommand{\copName}{CO-PROMOTER}
	}

%%define any lengths
\newlength{\spaceLength}
\setlength{\spaceLength}{5mm}


%%define the \makecover command
\newcommand{\makecover}{
 {
 	\dFont
 	\thispagestyle{empty}
	\vspace*{\fill}
	\centering
	\tName
	\\[\spaceLength]
	by
	\\[\spaceLength]
	\sName
	\\[\spaceLength]
	\degName
	\\[\spaceLength]
	submitted in the fulfilment\\of the requirements for the degree
	\\[\spaceLength]
	\dName
	\\[\spaceLength]
	in
	\\[\spaceLength]
	\fName
	\\[\spaceLength]
	in the
	\\[\spaceLength]
	\facName
	\\[\spaceLength]
	at the
	\\[\spaceLength]
	\uName
	\\[\spaceLength]
	\pName:~\supName
	\\[\spaceLength]
	\ifthenelse{\equal{\cosupName}{}}
	{}
	{
		\copName:~\cosupName
		\\[\spaceLength]
	}
	\sDate
	\vspace{\fill}
	\\
	\pagebreak
 }
}
